<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalSummaryScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:background="@color/transperantblack"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/white">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_margin="7dp"
                        android:textColor="@color/black"
                        android:text="Thank you for shopping with Apollo.\nYou have made a great choice"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your order details has been sent to msrivardhini@gmail.com"
                        android:textColor="@color/color_ash"
                        android:textStyle="bold"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="7dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hello, Srivardhini"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="120dp" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Your order has been successfully completed and it will be delivered to you in the near future, you can track the delivery status in the personal account. You could also receive a notification with the link to track the parcel."
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="7dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apollo"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="7dp" />



                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:id="@+id/backtostoreicon"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:background="@drawable/styleforbacktostore"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_arrow_back_24" />

                        <TextView
                            android:id="@+id/backstore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="bottom"
                            android:text="Back to Store"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:background="@color/ashwhite"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ordersummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:text=" Order Summary"
                android:textColor="@color/black"
                 />

            <LinearLayout
                android:id="@+id/addressanditems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/ordersummary"
                android:layout_marginStart="8dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order No: "
                android:textSize="11dp"
                android:textColor="@color/color_ash" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="000000154"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Delivery Address: "
                    android:textColor="@color/color_ash" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:id="@+id/address1"
                    android:text="abcd, Hyderabad, Telangana - 500055"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/addressanditems">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textSize="10dp"
                    android:id="@+id/itemss"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="("
                    android:textColor="@color/black" />
                <TextView
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/color_peach" />

                <TextView
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textColor="@color/black" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="@dimen/dimen7dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/items"
                android:id="@+id/finalrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/totall"
                android:layout_marginStart="7dp"
                android:textStyle="bold"
                android:text="Shipping"
                android:layout_marginBottom="4dp"
                android:textColor="@color/color_ash"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/cost"
                android:layout_marginStart="7dp"
                android:layout_alignParentEnd="true"
                android:text="₹0.00"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:textColor="@color/color_ash"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/totall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="10dp"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="@color/color_ash"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="7dp"
                android:text="₹12,785.00"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
</layout>