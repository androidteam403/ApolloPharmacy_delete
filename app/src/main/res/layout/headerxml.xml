<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundproducts">

    <LinearLayout
        android:layout_width="wrap_content"
      android:layout_centerVertical="true"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_2"/>
        <View
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/topImage1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:id="@+id/linear">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experts for"
                android:textSize="10dp"
                android:id="@+id/textView1"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/raheb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rehab"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search10" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/addcart"
            android:layout_marginStart="15dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/whitebasket1" />

            <TextView
                android:layout_marginTop="5dp"

                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:id="@+id/cartzero"
                android:textStyle="bold"
                android:text="0"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shapeeforaddtocart"/>



        </RelativeLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logout1" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome\nSrivardhini"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

</RelativeLayout>
    </layout>