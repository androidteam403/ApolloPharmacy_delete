<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="300dp"
    android:layout_margin="@dimen/dimen10dp"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cancelbuttonn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_alignParentEnd="true"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialogueboxbackground">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/phonepaysmalliconbackground"
                android:padding="5dp"
                android:src="@drawable/phonepaylogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="PhonePay"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/dialogueboxbackground2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text="Amount :"
                    android:textColor="@color/color_ash"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="â‚¹ 12,785.00Rs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/phonepayscan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Scan and Pay using phone pay app"
                android:textColor="@color/color_ash"
                android:textSize="12dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:padding="@dimen/dimen5dp"
                android:layout_marginBottom="@dimen/dimen5dp"
                android:textSize="10dp"
                android:background="@drawable/styleforcontinue"
                android:text="VERIFYING PAYMENT STATUS" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
</RelativeLayout>

</layout>